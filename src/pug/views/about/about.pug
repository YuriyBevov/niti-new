include ../../mixins/about-slide

-
  const clientList = [
   'udachnyy', 'antares','ilim','bsm','marine',
  ]

section.about
  .container
    h1.visually-hidden О нас

    .swiper.about-slider
      .swiper-pagination.about-slider-pagination
      .swiper-button-next.about-slider-button-next
      .swiper-button-prev.about-slider-button-prev
      .swiper-wrapper
        .swiper-slide
          img(src="./assets/img/about-2.jpg" alt="О нас" width="400" height="300")

        .swiper-slide
          img(src="./assets/img/about-1.jpg" alt="О нас" width="400" height="300")

    h2.section-title.accent Наши клиенты

  .swiper.client-slider.autoplay
    .swiper-wrapper
      each client in clientList
        .swiper-slide
          img(src=`./assets/img/clients/${client}.png` alt="" width="100" height="40")


