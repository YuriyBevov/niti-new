include ../../mixins/about-slide

-
  const clientList = [
   'udachnyy', 'antares','ilim','bsm','marine',
  ]

section.about
  .container
    h1.visually-hidden О нас

    .swiper.banner-slider
      .swiper-pagination.banner-slider-pagination
      .swiper-button-next.banner-slider-button-next
      .swiper-button-prev.banner-slider-button-prev
      .swiper-wrapper
        .swiper-slide
          picture
            source(type="image/webp" media="(max-width: 433px)" srcset="./assets/img/banner-bg-mobile@1x.webp 1x, ./assets/img/banner-bg-mobile@2x.webp 2x")
            source(type="image/webp" media="(max-width: 959px)" srcset="./assets/img/banner-bg-tablet@1x.webp 1x, ./assets/img/banner-bg-tablet@2x.webp 2x")
            source(type="image/webp" srcset="./assets/img/banner-bg@1x.webp 1x, ./assets/img/banner-bg@2x.webp 2x")

            source(type="image/png" media="(max-width: 433px)" srcset="./assets/img/banner-bg-mobile@1x.png 1x, ./assets/img/banner-bg-mobile@2x.png 2x")
            source(type="image/png" media="(max-width: 959px)" srcset="./assets/img/banner-bg-tablet@1x.png 1x, ./assets/img/banner-bg-tablet@2x.png 2x")
            img(src="./assets/img/banner-bg@1x.png" srcset="./assets/img/banner-bg@2x.png 2x" alt="Баннер" width="1290" height="262")

        .swiper-slide
          picture
            source(type="image/webp" media="(max-width: 433px)" srcset="./assets/img/banner-bg-mobile@1x.webp 1x, ./assets/img/banner-bg-mobile@2x.webp 2x")
            source(type="image/webp" media="(max-width: 959px)" srcset="./assets/img/banner-bg-tablet@1x.webp 1x, ./assets/img/banner-bg-tablet@2x.webp 2x")
            source(type="image/webp" srcset="./assets/img/banner-bg@1x.webp 1x, ./assets/img/banner-bg@2x.webp 2x")

            source(type="image/png" media="(max-width: 433px)" srcset="./assets/img/banner-bg-mobile@1x.png 1x, ./assets/img/banner-bg-mobile@2x.png 2x")
            source(type="image/png" media="(max-width: 959px)" srcset="./assets/img/banner-bg-tablet@1x.png 1x, ./assets/img/banner-bg-tablet@2x.png 2x")
            img(src="./assets/img/banner-bg@1x.png" srcset="./assets/img/banner-bg@2x.png 2x" alt="Баннер" width="1290" height="262")

        .swiper-slide
          picture
            source(type="image/webp" media="(max-width: 433px)" srcset="./assets/img/banner-bg-mobile@1x.webp 1x, ./assets/img/banner-bg-mobile@2x.webp 2x")
            source(type="image/webp" media="(max-width: 959px)" srcset="./assets/img/banner-bg-tablet@1x.webp 1x, ./assets/img/banner-bg-tablet@2x.webp 2x")
            source(type="image/webp" srcset="./assets/img/banner-bg@1x.webp 1x, ./assets/img/banner-bg@2x.webp 2x")

            source(type="image/png" media="(max-width: 433px)" srcset="./assets/img/banner-bg-mobile@1x.png 1x, ./assets/img/banner-bg-mobile@2x.png 2x")
            source(type="image/png" media="(max-width: 959px)" srcset="./assets/img/banner-bg-tablet@1x.png 1x, ./assets/img/banner-bg-tablet@2x.png 2x")
            img(src="./assets/img/banner-bg@1x.png" srcset="./assets/img/banner-bg@2x.png 2x" alt="Баннер" width="1290" height="262")

    h2.section-title.accent Наши клиенты

  .swiper.client-slider.autoplay
    .swiper-wrapper
      each client in clientList
        .swiper-slide
          img(src=`./assets/img/clients/${client}.png` alt="" width="100" height="40")


